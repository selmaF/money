<Label>:
    font_size: 60
    markup: True


<RfButton@Button>:
    font_size: 25
    bold:True
    border:(2,2,2,2)



BoxLayout:
    orientation: 'vertical'

    Label:
        id: time
        text: '[b]00[/b]:00:00'


    BoxLayout:
        height: 90
        orientation: 'horizontal'
        padding: 20
        spacing: 20
        size_hint: (1,None)

        RfButton:
            text: 'start'
            font_size: 25
            bold: True
            id: start_stop

        RfButton:
            text: 'Reset'
            font_size: 25
            bold: True

    Label:
        id: stopwatch
        text: '00:00.[size=40]00[/size]'


