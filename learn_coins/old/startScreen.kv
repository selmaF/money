<GameScreen>:
    name: 'GameScreen'
    RelativeLayout:
        canvas:
            Color:
                rgb: 1,1,1#0,0.2,0
            Rectangle:
                size: self.size
                pos: self.pos
                source: 'textures/Wood.jpg'


        Goal:
            id: goal_id
            size: (root.size[0], root.size[1]/3)
            pos: (root.pos[0], (root.size[1]/3)*2 )

        Label:
            id: sum_id
            text: "0.00  â‚¬"
            font_size: 50
            text_size: self.size
            halign: 'left'
            valign: 'top'
    Button:
        size_hint: 1,0.1
        id: backButton
        text: 'back'
        on_press:
            root.manager.current = 'StartScreen'

<ChangeScreens>:

    StartScreen:
    GameScreen:
    SettingsScreen:
