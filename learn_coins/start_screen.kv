# File name: start_screen.kv

#:kivy 1.9.0


<StartScreen>:
    name: 'StartScreen'
    canvas:
        Color:
            rgb: 1,1,1
        Rectangle:
            size: self.size
            pos: self.pos
            source: 'textures/Wood.jpg'
    BoxLayout:
        orientation: 'vertical'
        #size: root.size[0]*0.7, root.size[1]*0.4
        size_hint: 0.7, 0.4
        #pos: root.size[0]*0.15, root.size[1]*0.3
        #spacing: (root.size[1]/20)
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        CoinButton:
            text: 'Start game'
            on_press: root.manager.current = 'GameScreen'
        CoinButton:
            text: 'Settings'
            on_press: root.manager.current = 'SettingsScreen'


        CoinButton:
            text: 'Quit game'
            on_press: App.get_running_app().stop()