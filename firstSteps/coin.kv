#:kivy 1.9.0

<Coin>:
    size_hint: None, None
    size: 70,70
    canvas:
        Color:
            rgb: 0,0.6,0.6
        Ellipse:
            pos: self.pos
            size: self.size
            source: 'kivy.png'
    Label:
        size: 50,10
        pos: root.center_x,root.center_y
        text: str(root.worth)



<Goal>:
    canvas:
        Color:
            rgba: 0.2,0.2,0.2,0.6
        Rectangle:
            size: (self.size[0], self.size[1]/3)
            pos: self.pos
        Color:
            rgb: 1,1,1
        Line:
            rectangle: self.x+2,self.y+2,self.width-2,(self.size[1]/3)-2

<Game>:
    canvas:
        Color:
            rgb: 0,0.2,0
        Rectangle:
            size: self.size
            pos: self.pos

    Goal:
        id: goal_id
        #size: (self.size[0], self.size[1]/3)






